<Window x:Class="CashierApp.PilihCoupon"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CashierApp"
        mc:Ignorable="d"
        Title="PilihCoupon" Height="450" Width="434">
    <Grid>
        <Label Content="Daftar kupon belanja yang tersedia" HorizontalAlignment="Left" Margin="16,22,0,0" VerticalAlignment="Top" Width="201"/>
        <ListBox x:Name="DaftarCoupon" HorizontalAlignment="Left" Height="156" Margin="16,61,0,0" VerticalAlignment="Top" Width="371" SelectionChanged="DaftarCouponSelectionChanged">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="0,1">
                        <TextBlock Grid.Row="0" Text="{Binding Title}" TextAlignment="Left" FontSize="16" />
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

    </Grid>
</Window>
